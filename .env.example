# 数据库配置
MYSQL_ROOT_PASSWORD=your_mysql_root_password_here
MYSQL_DATABASE=task_trade
MYSQL_USER=taskuser
MYSQL_PASSWORD=your_mysql_password_here

# JWT配置
JWT_SECRET=your-super-secret-jwt-key-change-in-production-at-least-32-chars

# 收钱吧支付配置
SQB_API_URL=https://api.shouqianba.com
SQB_API_KEY=your_sqb_api_key_here
SQB_TOKEN=your_sqb_token_here

# Redis配置
REDIS_PASSWORD=your_redis_password_here

# 系统配置
TZ=Asia/Shanghai
LOG_LEVEL=info
NODE_ENV=production

# 监控配置
GRAFANA_PASSWORD=your_grafana_password_here

# 外部服务配置
WECHAT_APP_ID=your_wechat_app_id
WECHAT_APP_SECRET=your_wechat_app_secret
ALIPAY_APP_ID=your_alipay_app_id
ALIPAY_PRIVATE_KEY=your_alipay_private_key

# 文件存储配置
UPLOAD_PATH=/app/uploads
MAX_FILE_SIZE=10MB
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif,pdf,doc,docx,xls,xlsx

# 邮件服务配置
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_email@example.com
SMTP_PASSWORD=your_email_password

# 短信服务配置
SMS_ACCESS_KEY=your_sms_access_key
SMS_SECRET_KEY=your_sms_secret_key

# CDN配置（如果使用）
CDN_DOMAIN=https://cdn.example.com
STATIC_URL=https://static.example.com

# 安全配置
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=1m

# 备份配置
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your_backup_bucket
BACKUP_S3_REGION=your_backup_region